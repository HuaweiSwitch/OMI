{
  /* TODO: stop background thread that monitors subscriptions */
  MI_Uint32 retValue;
  self->self.disabling = MI_TRUE;
  Thread_Join( & self->self.thread, &retValue );
  MI_PostResult( indicationsContext, MI_RESULT_OK );
